generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thinker {
  id      String    @id @default(uuid())
  name    String
  summary String
  image   String?
  birth   DateTime
  death   DateTime?
  works   Work[]    @relation("ThinkerWorks")
  quotes  Quote[]
}

model Work {
  id       String    @id @default(uuid())
  title    String
  year     DateTime
  theme    String
  link     String?
  fullText String?
  image    String?
  thinkers Thinker[] @relation("ThinkerWorks")
}

model Quote {
  id        String  @id @default(uuid())
  content   String
  thinker   Thinker @relation(fields: [thinkerId], references: [id])
  thinkerId String
}
